<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardElevation="2dp"
        app:cardCornerRadius="20dp"
        android:background="@color/cardview_shadow_start_color"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/product_img"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_product_image" />
            <TextView
                android:id="@+id/product_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_img"
                android:layout_marginTop="12dp"
                android:text="Category : Girls"
                android:textColor="@color/popular_image_background"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/pruduct_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_category"
                android:layout_marginTop="10dp"
                android:text="Tanduri Chicken Goes On 5% Discount, Quentity:- 5  "
                android:textColor="@color/name_text_color"
                android:textSize="22sp" />


            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pruduct_des"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="Price : 200 TK "
                android:textColor="@color/red"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/product_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pruduct_des"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="Code : 123455 "
                android:textColor="@color/teal_700"
                android:textSize="20sp" />










        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>